{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "allowJs": false,
    "strict": true,
    "baseUrl": "frontend/src",
    "paths": {
      "@components/*": ["components/*"],
      "@admin/*": ["admin/*"],
      "@pages/*": ["pages/*"]
    }
  },
  "include": ["frontend/src"]
}
